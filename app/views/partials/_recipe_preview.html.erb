<a href=<%= recipe_path(recipe.id)%> class= "recipe-preview">
  <% if recipe.image_data%>
  <%recipe.image_derivatives!%>
  <%= image_tag recipe.image_url(:small)%>
  <%p recipe.image_data%>
  <% end %>
  <div class="preview-info">
    <p class="preview-name"><%=recipe.name%></p>
    <p class="preview-description"><%=recipe.description%></p>
  </div>
</a>